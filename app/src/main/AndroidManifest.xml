<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/note_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/note_logo"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.NoteApp"
        tools:targetApi="31">
        <activity android:name=".View.SplashScreen"
            android:exported="true"
            android:theme="@style/Base.Theme.NoteApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".View.AddNoteScreen"
            android:exported="true">
        </activity>
        <activity
            android:name=".View.UpdateNoteScreen"
            android:exported="true">
        </activity>
    </application>

</manifest>